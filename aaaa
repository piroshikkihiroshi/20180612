# .NETのCursorクラスを利用するためにSystem.Windows.Formsをロード
add-type -AssemblyName System.Windows.Forms
$intSleepSec = 50
$bfPos = [System.Windows.Forms.Cursor]::Position
while ($true) {
    $actPos = [System.Windows.Forms.Cursor]::Position
    # CursorクラスのPositionプロパティにマウス座標を設定
    #[System.Windows.Forms.Cursor]::Position = new-object System.Drawing.Point(640, 480)
    if($actPos -eq $bfPos){
        #Windowsキーを押す
        [System.Windows.Forms.SendKeys]::SendWait("^{ESC}")
    } #if
    $bfPos = [System.Windows.Forms.Cursor]::Position
    Start-Sleep -s $intSleepSec
} #while



